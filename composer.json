{
  "name": "webo/swistak",
  "description": "Webo - wp for swistak",
  "license": "proprietary",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "advanced-custom-fields/advanced-custom-fields-pro",
        "version": "5.8.9",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://connect.advancedcustomfields.com/index.php?a=download&p=pro&k={%ACF_PRO_KEY}&t={%VERSION}"
        },
        "require": {
          "johnpbloch/wordpress" : "^5.0.0",
          "composer/installers": "^1.4",
          "ffraenz/private-composer-installer": "^4.0"
        }
      }
    },
    {
      "type": "path",
      "url": "theme"
    },
    {
      "type": "path",
      "url": "config",
      "options": {
        "symlink": false
      }
    }
  ],
  "require": {
    "johnpbloch/wordpress" : "^5.0.0",
    "advanced-custom-fields/advanced-custom-fields-pro": "^5.8.9",
    "wpackagist-plugin/litespeed-cache": "^2.9.9.2",
    "wpackagist-plugin/cloudguard": "^1.4.2",
    "wpackagist-plugin/acf-extended":"^0.8.5",
    "wpackagist-plugin/advanced-forms":"^1.6.7",
    "vlucas/phpdotenv": "^4.1",
    "slowprog/composer-copy-file": "^0.3.1",
    "webo/swistak-theme": "1.0.0"
  },
  "scripts": {
    "post-install-cmd": [
        "SlowProg\\CopyFile\\ScriptHandler::copy"
    ],
    "post-update-cmd": [
        "SlowProg\\CopyFile\\ScriptHandler::copy"
    ]
  },
  "extra": {
    "wordpress-install-dir": "public",
    "installer-paths": {
      "public/wp": ["type:cms-core"],
      "public/wp-content/mu-plugins/{$name}/" : ["type:wordpress-muplugin"],
      "public/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "public/wp-content/themes/{$name}/": ["type:wordpress-theme"]
    },
    "copy-file": {
      "config/": "public/"
    }
  }
}
